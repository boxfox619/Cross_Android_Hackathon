<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:elevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="12"
        android:background="@drawable/card_lower_bg"
        android:orientation="vertical">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:src="@drawable/ic_peercoin" />


        <TextView
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="#b144fe"
            android:lineSpacingExtra="5sp"
            android:gravity="center_horizontal"
            android:text="Peercoin wallet" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="#696969"
            android:lineSpacingExtra="5sp"
            android:gravity="center_horizontal"
            android:text="was successfully created!" />


        <TextView
            android:layout_marginTop="120dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#696969"
            android:lineSpacingExtra="3sp"
            android:text="Wallet Address"
            />

        <TextView
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#b144fe"
            android:lineSpacingExtra="2sp"
            android:text="0xa5B5bE1ecB7469eC27E3CA89E5d940c9dbcCc56"
            />




    </LinearLayout>

    <ImageView
        android:id="@+id/completewallet_ok_imageview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:background="@drawable/main_addwallet_bg"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:elevation="2dp"
        android:src="@drawable/ic_check" />

</LinearLayout>