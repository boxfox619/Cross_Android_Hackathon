<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fffdfd"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:elevation="2dp"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="50">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_empty_circle"
            android:padding="10dp"
            android:src="@drawable/ic_etherium" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="135"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginStart="36dp"
            android:lineSpacingExtra="3sp"
            android:text="Wallet name"
            android:textColor="#696969"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/registerwallet_walletname_edittext"
            android:layout_height="40dp"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/custom_edittext_bg1"
            android:inputType="text"
            android:lineSpacingExtra="4sp"
            android:paddingStart="10dp"
            android:textColor="#696969"
            android:layout_width="match_parent"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginStart="36dp"
            android:lineSpacingExtra="3sp"
            android:text="Description"
            android:textColor="#696969"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/registerwallet_description_edittext"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/custom_edittext_bg1"
            android:inputType="text"
            android:lineSpacingExtra="4sp"
            android:paddingStart="10dp"
            android:textColor="#696969"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginStart="36dp"
            android:lineSpacingExtra="3sp"
            android:text="Password"
            android:textColor="#696969"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/registerwallet_pw_edittext"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/custom_edittext_bg1"
            android:inputType="textPassword"
            android:lineSpacingExtra="4sp"
            android:paddingStart="10dp"
            android:textColor="#696969"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginStart="36dp"
            android:lineSpacingExtra="3sp"
            android:text="Confirm Password"
            android:textColor="#696969"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/registerwallet_confirmpw_edittext"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/custom_edittext_bg1"
            android:inputType="textPassword"
            android:lineSpacingExtra="4sp"
            android:paddingStart="10dp"
            android:textColor="#696969"
            android:textSize="20sp" />

    </LinearLayout>

    <Button
        android:id="@+id/registerwallet_addwallet_imageview"
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:background="@drawable/button_bg"
        android:gravity="center"
        android:lineSpacingExtra="4sp"
        android:text="다음"
        android:textColor="#ffffff"
        android:textSize="16sp" />

</LinearLayout>


