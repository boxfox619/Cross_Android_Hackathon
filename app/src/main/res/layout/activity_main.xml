<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_drawer_layout"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#f1f4f7">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:id="@+id/main_topbox_linearlayout"
            android:layout_height="210dp"
            android:layout_width="match_parent"
            android:elevation="2dp"
            android:background="@drawable/card_lower_bg"
            android:orientation="vertical">

            <android.support.design.widget.AppBarLayout

                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                android:fitsSystemWindows="true"
                app:elevation="0dp">

                <android.support.v7.widget.Toolbar android:background="@color/colorWhite"
                    app:contentInsetLeft="0dp"
                    app:contentInsetStart="0dp"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

            </android.support.design.widget.AppBarLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingExtra="4sp"
                android:text="Cross-3379"
                android:textColor="#696969"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:lineSpacingExtra="4sp"
                    android:text="₩"
                    android:textColor="#707070"
                    android:textSize="20sp"
                    android:gravity="bottom"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="6sp"
                    android:text="103,260,000"
                    android:textColor="#b144fe"
                    android:textSize="28sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_linearlayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="invisible"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/ic_trending_up" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:lineSpacingExtra="2sp"
                    android:textColor="#707070"
                    android:textSize="10sp"
                    android:gravity="bottom"
                    tools:text="₩" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="3sp"
                    android:text="206,478 "
                    android:textColor="#b144fe"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="3sp"
                    android:text="(1.45%)"
                    android:textColor="#b144fe"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>
        <com.github.aakira.expandablelayout.ExpandableLinearLayout
            android:layout_below="@+id/main_topbox_linearlayout"
            android:id="@+id/main_topbox_expandable"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/main_expandable_bg"
            android:elevation="2dp"
            android:orientation="vertical"
            app:el_duration="1000"
            app:el_expanded="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_height="65dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <ImageView
                        android:layout_marginEnd="9dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:src="@drawable/ic_copy" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:lineSpacingExtra="2sp"
                        android:text="Copy wallet"
                        android:textColor="#696969"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/main_remittance_linearlayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <ImageView
                        android:layout_marginEnd="9dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:src="@drawable/ic_remittance" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:lineSpacingExtra="2sp"
                        android:text="Remittance"
                        android:textColor="#696969"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>

        </com.github.aakira.expandablelayout.ExpandableLinearLayout>



        <android.support.v7.widget.RecyclerView
            android:id="@+id/main_coin_recyclerview"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_below="@+id/main_topbox_expandable"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:id="@+id/btn_create_wallet"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="13dp"
            android:background="@drawable/main_addwallet_bg"
            android:elevation="8dp"
            android:padding="13dp"
            android:src="@drawable/ic_add_wallet" />

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer" >
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
