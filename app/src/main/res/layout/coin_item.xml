<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="106dp"
    android:background="@drawable/coin_item_bg"
    android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/coin_bg"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp">

                <ImageView
                    android:id="@+id/coin_profile_imageview"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/coin_ex1"
                    android:layout_margin="15dp"/>

            </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="265"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp">

        <TextView
            android:id="@+id/coin_name_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3sp"
            android:text="Ethereum"
            android:textColor="#696969"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/coin_unit_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ETH "
                android:textColor="#707070"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/coin_hold_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4sp"
                android:text="32.0938274347"
                android:textAlignment="viewEnd"
                android:textColor="#b144fe"
                android:textSize="20sp" />

        </LinearLayout>


    </LinearLayout>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_more_vert_black_24dp"
        android:layout_margin="15dp"
        android:layout_gravity="center_vertical"/>
</LinearLayout>