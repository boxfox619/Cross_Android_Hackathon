<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/log_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f4f7">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/main_topbox_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:background="@drawable/card_lower_bg"
            android:elevation="2dp"
            android:orientation="vertical">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:fitsSystemWindows="true"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:elevation="0dp">

                <android.support.v7.widget.Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/log_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    app:contentInsetLeft="0dp"
                    app:contentInsetStart="0dp"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

            </android.support.design.widget.AppBarLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/log_coin_imageview"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_etherium" />

                <TextView
                    android:id="@+id/log_name_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_toEndOf="@+id/log_coin_imageview"
                    android:text="Ethereum wallet"
                    android:textColor="#696969"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/log_name_imageview"
                    android:layout_marginStart="18dp"
                    android:layout_toEndOf="@+id/log_coin_imageview"
                    android:text="Ethereum Â· ETH"
                    android:textColor="#80696969"
                    android:textSize="15sp" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="4sp"
                    android:text="ETH "
                    android:textColor="#707070"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="4sp"
                    android:text="32.0938274347"
                    android:textColor="#b144fe"
                    android:textSize="20sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="2sp"
                android:text="0xa5B5bE1ecB7469eC27E3CA89E5d940c9dbcCc56"
                android:textColor="#80696969"
                android:textSize="10sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/main_copy_linearlayout"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginHorizontal="20dp"
                    android:layout_toStartOf="@+id/split_view"
                    android:background="@drawable/main_button_bg"
                    android:paddingStart="10dp"
                    android:paddingVertical="10dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_copy_highlight" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:gravity="center_horizontal"
                        android:text="Copy wallet"
                        android:textColor="#A283F3"
                        android:textSize="15sp" />

                </LinearLayout>

                <View
                    android:id="@+id/split_view"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true" />

                <LinearLayout
                    android:id="@+id/main_remittance_linearlayout"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_toEndOf="@+id/split_view"
                    android:background="@drawable/main_button_bg"
                    android:paddingStart="10dp"
                    android:paddingVertical="10dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_remittance_highlight" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:gravity="center_horizontal"
                        android:text="Remittance"
                        android:textColor="#A283F3"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/log_coin_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/main_topbox_linearlayout"
            android:layout_marginTop="10dp" />

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/log_navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer" />

</android.support.v4.widget.DrawerLayout>
