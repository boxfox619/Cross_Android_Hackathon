<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RemittanceSetCoinCountActivity"
    android:background="#F1F4F7"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/card_lower_bg">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="5dp"
            android:layout_above="@id/coin_count_container">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="보유 코인 "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ETH 32.0938274347"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/coin_count_container"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edittext_bg"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="30dp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="송금할 코인 개수를 입력해 주세요"
                android:textSize="15dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ETH"
                    android:layout_gravity="bottom"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="32.019474"
                    android:textColor="#b144fe"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="5dp"
                    android:textSize="30dp"
                    android:background="@android:color/transparent"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KRW 100,094,128.192385"
            android:textSize="15dp"
            android:gravity="end"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="30dp"
            android:textStyle="bold"
            android:layout_below="@+id/coin_count_container"/>
    </RelativeLayout>
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_next"
        android:scaleType="fitCenter"
        android:padding="20dp"
        android:background="@drawable/coin_item_bg"/>
</LinearLayout>