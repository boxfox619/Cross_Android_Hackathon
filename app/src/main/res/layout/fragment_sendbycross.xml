<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/sendbycross_icon_imageview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/icon" />

    <TextView
        android:id="@+id/sendbycross_tetview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sendbycross_icon_imageview"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:lineSpacingExtra="3sp"
        android:text="Please input wallet for remittance"
        android:textColor="#696969"
        android:textSize="16sp" />

    <EditText
        android:inputType="text"
        android:id="@+id/sendbycross_account_edittext"
        android:paddingStart="10dp"
        android:textSize="25sp"
        android:textColor="#555555"
        android:lineSpacingExtra="5sp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/sendbycross_tetview1"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/custom_edittext_bg" />
    <Button
        android:gravity="center"
        android:id="@+id/sendbycross_next_imagebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/sendbycross_account_edittext"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/button_bg"
        android:lineSpacingExtra="4sp"
        android:text="다음"
        android:textColor="#ffffff"
        android:textSize="16sp" />
</RelativeLayout>